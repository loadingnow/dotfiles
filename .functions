# `s` with no arguments opens the current directory in Sublime Text, otherwise
# opens the given location
function s() {
	if [ $# -eq 0 ]; then
		subl .;
	else
		subl "$@";
	fi;
}

# `o` with no arguments opens the current directory, otherwise opens the given
# location
function o() {
	if [ $# -eq 0 ]; then
		open .;
	else
		open "$@";
	fi;
}

# 因為從 mac 直接異動虛擬機內的 Windows 的硬碟的檔案
# 如果有類似新建的行為，建立日期會正常，但是檔案的修改日期無法被正確寫入，會成為 1970-01-01 
# 比如 git pull 
function gtouch() {	 
	find . -type f ! -newermt '1970-01-02' ! -path '*/.git*' ! -path '*/java/*' -print | while read filename; do
    	# do whatever you want with the file
    	touch "$filename"
	done	
}
